<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/android"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="180dp"
        android:layout_height="180dp"/>

    <TextView
        android:textStyle="bold"
        android:textColor="@color/color_principal"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/btnLogin"
        android:id="@+id/txtWelcome"
        android:layout_centerHorizontal="true"
        android:text="Bienvenido :D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:backgroundTint="@color/color_principal"
        android:id="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnRegistro"
        android:text="Ingresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnRegistro"
        android:layout_alignEnd="@+id/btnRegistro"
        />


    <Button
        android:backgroundTint="@color/color_principal"
        android:id="@+id/btnRegistro"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txtIdioma"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="Resgistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txtIdioma"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Lenguaje : EspaÃ±ol >"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>